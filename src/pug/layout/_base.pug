include ../_mixins.pug

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="css/main.css")
        block title
            title Project title

        block head

    body
        block page--class
            - let pageClass = '.pg--main'
        .wrapper
            block header
            main.main(class=pageClass)
                block content
            block footer